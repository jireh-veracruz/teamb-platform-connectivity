{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 13,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "cm4",
      "displayName": "Build Cortex-M4",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/cm4",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "scripts/cmake/toolchain/cm4/toolchain_stm32_cm4.cmake",
        "TARGET_CORE": "cm4"
      }
    },
    {
      "name": "ca7",
      "displayName": "Build Cortex-A7",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/ca7",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "scripts/cmake/toolchain/ca7/toolchain_stm32_ca7.cmake",
        "TARGET_CORE": "ca7"
      }
    },
    {
      "name": "all",
      "displayName": "Build Both CM4 and CA7",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/all",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "BSP/stm32/toolchain_stm32_cm4.cmake",
        "TARGET_CORE": "ALL"
      }
    },
    {
      "name": "cm4-debug",
      "displayName": "Build Cortex-M4 Debug",
      "inherits": "cm4",
      "binaryDir": "${sourceDir}/build/CM4-Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "ca7-debug",
      "displayName": "Build Cortex-A7 Debug",
      "inherits": "ca7",
      "binaryDir": "${sourceDir}/build/CA7-Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE":"Debug"
      }
    }

  ],
  "buildPresets": [
    {
      "name": "cm4",
      "configurePreset": "cm4",
      "description": "Build only Cortex-M4",
      "jobs": 4
    },
    {
      "name": "ca7",
      "configurePreset": "ca7",
      "description": "Build only Cortex-A7",
      "jobs": 4
    },
    {
      "name": "all",
      "configurePreset": "all",
      "description": "Build both CM4 and CA7",
      "jobs": 4
    },
    {
      "name": "cm4-debug",
      "configurePreset": "cm4-debug",
      "description": "Build Cortex-M4 Debug",
      "jobs": 4
    },
    {
      "name": "ca7-debug",
      "configurePreset": "ca7-debug",
      "description": "Build Cortex-A7 Debug",
      "jobs": 4
    }
  ]
}
